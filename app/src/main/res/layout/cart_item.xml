<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="182dp"
    android:padding = "8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="16dp"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/product_image"
                tools:src="@drawable/salmon_fish_0"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@id/first"
                app:layout_constraintTop_toTopOf="@id/first"
                app:layout_constraintStart_toStartOf="@id/first"/>
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="California orange 8 pcs"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@id/iv_product_image"
                app:layout_constraintEnd_toEndOf="@id/first"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/first"
                app:layout_constraintBottom_toBottomOf="@id/first"
                app:layout_constraintVertical_bias=".24"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/tv_product_discounted_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$500.00"
                android:fontFamily="@font/lato_bold"
                android:textFontWeight="400"
                android:textColor="@color/activecolor"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tv_product_name"
                app:layout_constraintEnd_toEndOf="@id/tv_product_name"
                app:layout_constraintTop_toBottomOf="@id/tv_product_name"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0"/>
            <TextView
                android:id="@+id/tv_product_actual_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$699.00"
                android:fontFamily="@font/lato_bold"
                android:textFontWeight="400"
                android:textColor="@color/stroke"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/tv_product_discounted_price"
                app:layout_constraintTop_toTopOf="@id/tv_product_discounted_price"
                app:layout_constraintBottom_toBottomOf="@id/tv_product_discounted_price"
                android:layout_marginStart="16dp"/>

            <ImageView
                android:id="@+id/iv_cancle_order"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@null"
                android:contentDescription="@string/cancle_order"
                android:src="@drawable/ic_close"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="@id/first"
                app:layout_constraintTop_toTopOf="@id/first"/>
            
            <TextView
                android:id="@+id/tv_product_quantity"
                android:layout_width="110dp"
                android:layout_height="30dp"
                tools:text="5"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/lato"
                android:textFontWeight="400"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintHorizontal_bias="0.2"
                android:background="@drawable/product_quantity_bg"
                app:layout_constraintStart_toEndOf="@id/iv_product_image"
                app:layout_constraintEnd_toEndOf="@id/first"
                app:layout_constraintTop_toBottomOf="@id/tv_product_discounted_price"/>

            <TextView
                android:id="@+id/tv_quantity_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quantity_plus"
                android:contentDescription="@string/quantity_plus"
                android:paddingStart="8dp"
                android:elevation="8dp"
                app:drawableStartCompat="@drawable/ic_minus"
                app:layout_constraintBottom_toBottomOf="@id/tv_product_quantity"
                app:layout_constraintStart_toStartOf="@id/tv_product_quantity"
                app:layout_constraintTop_toTopOf="@id/tv_product_quantity"
                tools:ignore="RtlSymmetry"/>

            <TextView
                android:id="@+id/tv_quantity_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quantity_plus"
                android:contentDescription="@string/quantity_plus"
                android:paddingStart="8dp"
                android:elevation="8dp"
                app:drawableStartCompat="@drawable/ic_plus"
                app:layout_constraintBottom_toBottomOf="@id/tv_product_quantity"
                app:layout_constraintEnd_toEndOf="@id/tv_product_quantity"
                app:layout_constraintTop_toTopOf="@id/tv_product_quantity"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>