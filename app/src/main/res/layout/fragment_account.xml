<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.account.AccountFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            style="?attr/toolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nop_bg">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nav_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/navbar_logo"
                    android:text="@string/account"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_bold"
                    android:textFontWeight="700"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.025"/>

                <ImageView
                    android:id="@+id/btn_logout"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="@string/checkout_button"
                    android:src="@drawable/ic_logout"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_profile_pic"
        app:layout_constraintStart_toStartOf="@id/icon_email"
        app:layout_constraintEnd_toEndOf="@id/tv_email"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_number"
        tools:visibility="visible"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/shimmer_view1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/shimmercolor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias=".379"/>

            <View
                android:id="@+id/shimmer_view2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@color/shimmercolor"
                app:layout_constraintTop_toBottomOf="@id/shimmer_view1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:id="@+id/shimmer_view3"
                android:layout_width="320dp"
                android:layout_height="25dp"
                android:layout_marginTop="6dp"
                android:background="@color/shimmercolor"
                app:layout_constraintTop_toBottomOf="@id/shimmer_view2"
                app:layout_constraintStart_toStartOf="@id/shimmer_view2"
                app:layout_constraintEnd_toEndOf="@id/shimmer_view2"
                app:layout_constraintBottom_toTopOf="@id/shimmer_view4"/>
            <View
                android:id="@+id/shimmer_view4"
                android:layout_width="320dp"
                android:layout_height="25dp"
                android:background="@color/shimmercolor"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/shimmer_view3"
                app:layout_constraintStart_toStartOf="@id/shimmer_view3"
                app:layout_constraintEnd_toEndOf="@id/shimmer_view3"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <ImageView
        android:id="@+id/icon_profile"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_account"
        app:tint="@color/black"
        app:layout_constraintEnd_toStartOf="@id/tv_logged_in_user"
        app:layout_constraintTop_toTopOf="@id/tv_logged_in_user"
        app:layout_constraintBottom_toBottomOf="@id/tv_logged_in_user"
        android:layout_marginEnd="10dp"/>
    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_email"
        app:tint="@color/black"
        app:layout_constraintEnd_toStartOf="@id/tv_email"
        app:layout_constraintTop_toTopOf="@id/tv_email"
        app:layout_constraintBottom_toBottomOf="@id/tv_email"
        android:layout_marginEnd="10dp"/>
    <ImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/tv_logged_in_user"
        app:layout_constraintStart_toStartOf="@id/tv_logged_in_user"
        app:layout_constraintEnd_toEndOf="@id/tv_logged_in_user"
        app:layout_constraintHorizontal_bias = "0.5"
        app:layout_constraintTop_toBottomOf="@id/appbar"/>

    <TextView
        android:id="@+id/tv_logged_in_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/logged_in_user"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias=".3"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/category_color"
        android:fontFamily="@font/lato_bold"
        android:text="More Account Details Coming Soon"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_logged_in_user"
        app:layout_constraintEnd_toEndOf="@id/tv_logged_in_user"
        app:layout_constraintTop_toBottomOf="@id/tv_logged_in_user"
        app:layout_constraintHorizontal_bias="0"/>

    <ImageView
        android:id="@+id/ic_order"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_orders"
        app:layout_constraintTop_toTopOf="@id/tv_order_number"
        app:layout_constraintEnd_toStartOf="@id/tv_order_number"/>

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/category_color"
        android:fontFamily="@font/lato_bold"
        android:text="@string/orders"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_email"
        app:layout_constraintEnd_toEndOf="@id/tv_email"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/tv_order_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        tools:text="0"
        android:textColor="@color/category_color"
        android:textSize="16sp"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintStart_toEndOf="@id/tv_order_number"
        app:layout_constraintTop_toTopOf="@id/tv_order_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_number"/>

</androidx.constraintlayout.widget.ConstraintLayout>