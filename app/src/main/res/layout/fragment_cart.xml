<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.cart.CartFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="?attr/toolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nop_bg"
            app:navigationIcon="@drawable/ic_back">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nav_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/navbar_logo"
                    tools:text="@string/shopping_cart"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_bold"
                    android:textFontWeight="700"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0"/>

                <ImageView
                    android:id="@+id/ib_checkout"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="@string/checkout_button"
                    android:src="@drawable/ic_checkout"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tv_cart_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_number"
                    android:text="0"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/ib_checkout"
                    app:layout_constraintEnd_toEndOf="@+id/ib_checkout"
                    app:layout_constraintTop_toTopOf="@+id/ib_checkout"
                    app:layout_constraintBottom_toBottomOf="@+id/ib_checkout"
                    app:layout_constraintVertical_bias="0.39"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintBottom_toTopOf="@id/bottom_button">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/shimmer_item"/>
            <include layout="@layout/shimmer_item"/>
            <include layout="@layout/shimmer_item"/>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Product_bg"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/products"
            android:textColor="@color/category_color"
            android:fontFamily="@font/lato_bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/second"
            app:layout_constraintTop_toTopOf="@id/second"
            app:layout_constraintBottom_toBottomOf="@id/second"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/total_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cart_total_item"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/category_color"
            tools:text = "@string/cart_items"
            android:textSize="11sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/second"
            app:layout_constraintTop_toTopOf="@id/second"
            app:layout_constraintBottom_toBottomOf="@id/second"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/second"
        app:layout_constraintStart_toStartOf="@id/second"
        app:layout_constraintEnd_toEndOf="@id/second"
        app:layout_constraintBottom_toTopOf="@id/bottom_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_items"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/third"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/stroke"
                app:layout_constraintStart_toStartOf="@id/third"
                app:layout_constraintEnd_toEndOf="@id/third"
                app:layout_constraintTop_toBottomOf="@+id/cart_items"/>
            <TextView
                android:id="@+id/tv_subtotal_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtotal"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/category_color"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/third"
                app:layout_constraintTop_toBottomOf="@+id/dv_one"
                app:layout_constraintBottom_toTopOf="@+id/dv_two"/>
            <TextView
                android:id="@+id/tv_subtotal_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="@string/subtotal_amount"
                android:textColor="@color/activecolor"
                android:fontFamily="@font/lato_bold"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/tv_subtotal_tag"
                app:layout_constraintTop_toTopOf="@id/tv_subtotal_tag"
                app:layout_constraintBottom_toBottomOf="@id/tv_subtotal_tag"
                app:layout_constraintEnd_toEndOf="@id/third"
                android:gravity="end"/>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/stroke"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@id/third"
                app:layout_constraintEnd_toEndOf="@id/third"
                app:layout_constraintTop_toBottomOf="@+id/tv_subtotal_tag"/>
            <TextView
                android:id="@+id/tv_shipping_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Shipping"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/category_color"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/third"
                app:layout_constraintTop_toBottomOf="@+id/dv_two"
                app:layout_constraintBottom_toTopOf="@+id/dv_three"/>
            <TextView
                android:id="@+id/tv_shipping_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="@string/shipping_amount"
                android:textColor="@color/activecolor"
                android:fontFamily="@font/lato_bold"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/tv_shipping_tag"
                app:layout_constraintTop_toTopOf="@id/tv_shipping_tag"
                app:layout_constraintBottom_toBottomOf="@id/tv_shipping_tag"
                app:layout_constraintEnd_toEndOf="@id/third"
                android:gravity="end"/>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/stroke"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@id/third"
                app:layout_constraintEnd_toEndOf="@id/third"
                app:layout_constraintTop_toBottomOf="@+id/tv_shipping_tag"/>
            <TextView
                android:id="@+id/tv_total_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/category_color"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@id/third"
                app:layout_constraintTop_toBottomOf="@+id/dv_three"
                app:layout_constraintBottom_toTopOf="@+id/dv_four"/>
            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="@string/total_amount"
                android:textColor="@color/activecolor"
                android:fontFamily="@font/lato_bold"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/tv_total_tag"
                app:layout_constraintTop_toTopOf="@id/tv_total_tag"
                app:layout_constraintBottom_toBottomOf="@id/tv_total_tag"
                app:layout_constraintEnd_toEndOf="@id/third"
                android:gravity="end"/>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/stroke"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="@id/third"
                app:layout_constraintEnd_toEndOf="@id/third"
                app:layout_constraintTop_toBottomOf="@+id/tv_total_tag"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/checkout_button"
            android:fontFamily="@font/lato_bold"
            android:text="@string/place_order"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/bottom_button"
            app:layout_constraintEnd_toEndOf="@id/bottom_button"
            app:layout_constraintStart_toStartOf="@id/bottom_button"
            app:layout_constraintTop_toTopOf="@id/bottom_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        android:background="#850BF7EB"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/end_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textSize="18sp"
            android:fontFamily="@font/lato_bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>